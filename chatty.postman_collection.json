							"raw": "{{base_url}}/socket.io/?EIO=4&transport=polling&t=N8hyd6w",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"socket.io",
								""
							],
							"query": [
								{
									"key": "EIO",
									"value": "4"
								},
								{
									"key": "transport",
									"value": "polling"
								},
								{
									"key": "t",
									"value": "N8hyd6w"
								}
							]
